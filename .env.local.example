# NextAuth base URL (dev)
NEXTAUTH_URL=http://localhost:3000

# Generate with e.g.:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET=replace_me

# Google OAuth credentials (Google Cloud Console -> OAuth Client ID)
GOOGLE_CLIENT_ID=replace_me.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=replace_me

# Optional: only needed if your server cannot reach Google endpoints and you want to use the local discovery mirror.
# USE_LOCAL_GOOGLE_WELLKNOWN=1

# OpenRouter (Gemini 2.5 Flash Image)
OPENROUTER_API_KEY=replace_me
# Optional headers for OpenRouter rankings/analytics
OPENROUTER_SITE_URL=http://localhost:3000
OPENROUTER_SITE_NAME=StarPet
